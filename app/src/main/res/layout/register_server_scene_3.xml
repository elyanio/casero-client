<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_report="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scene_1_text_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:paddingLeft="5dp"
                android:text="@string/rs_text1_scene3"
                android:textColor="@color/white"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/scene_3_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:paddingLeft="5dp"
                android:text="@string/rs_text2_scene3"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/rs_scene_3_input_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Usuario en su web"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/rs_scene_3_text_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/white"
                        android:inputType="text"
                        android:textColor="@color/white" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/rs_scene_3_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Contraseña en su web"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/rs_scene_3_text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/white"
                        android:inputType="text"
                        android:textColor="@color/white" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Ejemplo"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:text="Usuario: S0E30" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:text="Contraseña: 901108Die*2015" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view_report:cardCornerRadius="10dp">

            <Button
                android:id="@+id/rs_scene_3_bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Atrás"
                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view_report:cardCornerRadius="10dp">

            <Button
                android:id="@+id/rs_scene_3_bt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Siguiente"
                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>